server {
    listen 80 default_server;
    listen [::]:80 default_server;
    server_name _;

    location / {
        return 444;
    }

    location ^~ /.well-known/acme-challenge {
        alias /var/www/acme-challenge;
    }
}

server {
    listen 443 default_server ssl;
    listen [::]:443 default_server ssl;
    server_name _;

    ssl_reject_handshake on;

    return 444;
}
